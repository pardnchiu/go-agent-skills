{
  "name": "範例",
  "description": "功能描述",
  "endpoint": {
    "url": "https://your.api/{id}/sub/{vid}",
    "method": "GET|DELETE|POST|PUT|PATCH",
    "content_type": "json",
    "headers": {
      "X-Custom-Header": "value"
    },
    "query": {
      "test": "value"
    },
    "timeout": 15
  },
  "auth": {
    "type": "bearer",
    "header": "Authorization",
    "env": "API_SECRET_KEY"
  },
  "parameters": {
    "id": {
      "type": "string",
      "description": "資源 ID，對應 URL 中的 {id}",
      "required": true,
      "default": ""
    },
    "vid": {
      "type": "string",
      "description": "子資源 ID，對應 URL 中的 {vid}",
      "required": true,
      "default": ""
    }
  },
  "response": {
    "format": "json"
  }
}
